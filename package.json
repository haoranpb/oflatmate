{
  "name": "flatmate",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "15.x",
    "yarn": "1.x"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "start": "NODE_ENV=production node server/index.js",
    "start:dev": "NODE_ENV=development DEBUG=flat:* node server/index.js",
    "heroku:log": "heroku logs --app open-flatmate --tail",
    "heroku:db": "heroku pg:push flatmate DATABASE_URL --app open-flatmate"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "connect-history-api-fallback": "^1.6.0",
    "core-js": "^3.6.5",
    "debug": "^4.3.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.2.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pg-promise": "^10.8.6",
    "vue": "^3.0.4",
    "vue-router": "^4.0.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@vue/cli-plugin-babel": "~4.5.9",
    "@vue/cli-plugin-eslint": "~4.5.9",
    "@vue/cli-plugin-router": "~4.5.9",
    "@vue/cli-service": "~4.5.9",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "autoprefixer": "^9",
    "babel-eslint": "^10.1.0",
    "cors": "^2.8.5",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^7.4.0",
    "postcss": "^7",
    "prettier": "^2.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
